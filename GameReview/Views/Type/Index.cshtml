@model IList<GameReview.Models.GameType>

    <h2>Genres</h2>

@{ 
    <ul>
        <p><a asp-controller="Type" asp-action="Add">Add Type</a></p>
        @foreach(var type in Model)
        {
            <li>
                <a asp-controller="Game" asp-action="Type" asp-route-id="@type.ID">@type.Type</a>
            </li>

        }
    </ul>
    ViewData["Title"] = "Index";
}